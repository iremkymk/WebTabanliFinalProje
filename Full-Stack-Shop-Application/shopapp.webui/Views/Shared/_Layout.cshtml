<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">    
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.7.0/font/bootstrap-icons.css">
    <link rel="stylesheet" href="https://pro.fontawesome.com/releases/v5.10.0/css/all.css" integrity="sha384-AYmEC3Yw5cVb3ZcuHtOA93w35dYTsvhLPVnYs9eStHfGJvOvKxVfELGroGkvsg+p" crossorigin="anonymous"/>
    <link rel="stylesheet" href="/css/style.css">
    <link rel="icon" href="/img/icon/icon.png">
    <title>Alışveriş Uygulaması</title>
    <meta name="description" content="Teknolojik Ürünler Satın Almak İçin Doğru Adres. Hemen Şimdi Telefon, Laptop, Masaüstü Bilgisayar ve Tablet Ürünlerinden Hoşuna Gideni Satın Alabilirsin.">
    <meta name="keywords" content="Teknolojik Ürünler">
</head>
<body>
    @if (TempData["accountMessage"] != null)
    {
        var message = JsonConvert.DeserializeObject<AlertMessage>(TempData["accountMessage"] as String);
        <div class="text-center accountMessage">
            @await Html.PartialAsync("_alert", message)
        </div>
    } 

    <nav>
        @await Html.PartialAsync("_navbar")
    </nav>

    <div class="container">
        <div class="row justify-content-center searchBox">
            <form action="/search" class="d-flex col-12 col-lg-9">
                <input type="search" class="form-control searchInput" placeholder="İstediğiniz bir ürünü arayın" name="url" value="@ViewBag.SearchProduct">
                <button type="submit" class="btn btn-primary btn-lg searchButton"><i class="bi bi-search"></i></button>
            </form>
        </div>
    </div>

    <section>
        @RenderBody()
    </section>

    <svg xmlns="http://www.w3.org/2000/svg" fill="currentColor" class="bi bi-arrow-up-circle-fill backToTop text-primary" viewBox="0 0 16 16">
        <path d="M16 8A8 8 0 1 0 0 8a8 8 0 0 0 16 0zm-7.5 3.5a.5.5 0 0 1-1 0V5.707L5.354 7.854a.5.5 0 1 1-.708-.708l3-3a.5.5 0 0 1 .708 0l3 3a.5.5 0 0 1-.708.708L8.5 5.707V11.5z"/>
    </svg>

    <footer class="mt-5">
        @await Html.PartialAsync("_footer")
    </footer>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>
       
    <script src="https://code.jquery.com/jquery-3.5.1.js"></script>
    <script src="/js/app.js"></script>

    @RenderSection("Scripts",false)
    
    <script src="/modules/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="/modules/jquery-validation-unobtrusive/dist/jquery.validate.unobtrusive.min.js"></script>
    
    @* Üsttekilerin cdn versiyonu
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validate/1.19.3/jquery.validate.min.js" integrity="sha512-37T7leoNS06R80c8Ulq7cdCDU5MNQBwlYoy1TX/WUsLFC2eYNqtKlV0QjH7r8JpG/S0GUMZwebnVFLPd6SU5yg==" crossorigin="anonymous" referrerpolicy="no-referrer"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validation-unobtrusive/3.2.12/jquery.validate.unobtrusive.min.js" integrity="sha512-o6XqxgrUsKmchwy9G5VRNWSSxTS4Urr4loO6/0hYdpWmFUfHqGzawGxeQGMDqYzxjY9sbktPbNlkIQJWagVZQg==" crossorigin="anonymous" referrerpolicy="no-referrer"></script> *@

</body>
</html>