@model SliderViewModel
@{
    Layout="_AdminLayout";
}

<div class="container">
    <h2>Admin Ayarlari</h2>
    <hr>

    <div class="row my-5">
        <div class="col-md-3 mb-4 mb-md-0">
            <ul class="list-group">
                <a href="/admin/settings" class="list-group-item active">Slayt</a>
                <a href="/admin/settings/arrangement" class="list-group-item">Sayi</a>
                <a href="/admin/settings/files" class="list-group-item">Dosya</a>
            </ul>
        </div>

        <div class="col-md-9">
            @if (TempData["message"] != null)
            {
                var message = JsonConvert.DeserializeObject<AlertMessage>(TempData["message"] as String);
                @await Html.PartialAsync("_alert", message);
            }
            
            <div class="mb-3 d-flex align-items-end">
                <a href="/admin/panel" class="btn btn-secondary btn-sm "><i class="fas fa-arrow-circle-left"></i> Panele Geri Don</a>
                <i class="fal fa-grip-lines-vertical mx-1" style="font-size: 28px;"></i>
                <a href="/admin/settings/slider/create" class="btn btn-primary btn-sm @(User.IsInRole("admin")?"":"disabled")"><i class="fas fa-plus-circle"></i> Slayt Ekle</a>
            </div> 
            <table class="table table-bordered table-hover">
                <thead class="table-secondary">
                    <tr>
                        <th style="width: 100px;">Id</th>
                        <th style="width: 200px;">Resim</th>
                        <th>Düzen</th>
                        <th style="width: 200px;">Aktif</th>                       
                        <th style="width: 200px">Islemler</th>
                    </tr>
                </thead>

                <tbody>
                    @foreach (var item in Model.Sliders)
                    {
                        <tr>
                            <td>@item.Id</td>
                            <td><img src="/img/slider/@item.ImageUrl" class="w-100"></td>
                            <td>@item.Order</td>                            
                            <td>
                                @if (item.Active)
                                {
                                    <i class="bi bi-check-circle-fill text-success myBootstrapIcon"></i>
                                } else {
                                    <i class="bi bi-x-circle-fill text-danger myBootstrapIcon"></i>
                                }
                            </td>
                            <td>
                                <a href="/admin/settings/slider/edit/@item.Id" class="btn btn-primary btn-sm @(User.IsInRole("admin")?"":"disabled")">Duzenle</a>
                                <button data-target="/Settings/SliderDelete/@item.Id" class="btn btn-danger btn-sm d-inline sliderDeleteModal @(User.IsInRole("admin")?"":"disabled")" data-bs-toggle="modal" data-bs-target="#sliderDeleteModal">Sil</button>                                
                                
                                <div class="modal fade" id="sliderDeleteModal" data-bs-backdrop="static">
                                <div class="modal-dialog">
                                    <div class="modal-content">

                                        <div class="modal-header bg-danger text-white">
                                            <h4 class="modal-title">Delete the category ?</h4>
                                            <button type="button" class="btn-close btn-close-white text-white" data-bs-dismiss="modal" aria-label="Close"></button>
                                        </div>
                                        
                                        <div class="modal-body text-center">
                                                <i class="bi bi-x-octagon-fill text-danger" style="font-size: 35px;"></i>
                                                
                                                <p class="modalBodyText"> <strong>Dikkat !</strong> Bu slider'i kalıcı olarak silmek istediğinize emin misiniz ?</p>
                                        </div>

                                        <div class="modal-footer">
                                            <button class="btn btn-secondary" data-bs-dismiss="modal"><i class="fas fa-arrow-circle-left"></i> Vazgec</button>
                                            <a href="" class="btn btn-danger sliderDeleteButon"><i class="far fa-trash-alt"></i> Sil</a>
                                        </div>

                                    </div>
                                </div>
                            </div>


                            </td>
                        </tr> 
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>